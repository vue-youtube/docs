{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "esnext",
            "dom"
        ],
    },
    "include": [
        "env.d.ts",
        "src/**/*",
        ".vitepress/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/dist",
    ]
}